<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.InfoActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:id="@+id/info_toobar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_0"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/info_back"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/back_white"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_17"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_333333"
                android:layout_centerInParent="true"
                android:text="伴米详情"
                />
            
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:id="@+id/info_share"
                android:src="@mipmap/share"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_toobar"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_300"
       android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_20"
        app:cardElevation="@dimen/dp_5"
        android:id="@+id/card"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp_5"
        >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="@dimen/dp_120"
                  android:layout_height="@dimen/dp_170"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_marginLeft="@dimen/dp_13"
                  android:id="@+id/info_head"
                    android:scaleType="centerCrop"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/info_name"
                  android:text="杨晨"
                  android:textSize="@dimen/sp_22"
                  android:textColor="@color/c_333333"
                  android:layout_toRightOf="@id/info_head"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_marginLeft="@dimen/dp_8"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2598人关注"
                  android:textSize="@dimen/sp_12"
                  android:layout_below="@id/info_name"
                  android:layout_toRightOf="@id/info_head"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginLeft="@dimen/dp_8"
                  android:textColor="@color/c_999999"
                  />

              <ImageView
                  android:layout_width="@dimen/dp_20"
                  android:layout_height="@dimen/dp_18"
                  android:src="@mipmap/follow_unselected"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="@dimen/dp_13"
                  android:layout_marginRight="@dimen/dp_18"
                  android:id="@+id/info_heart"
                  />
              
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="关注"
                  android:textColor="@color/c_999999"
                  android:textSize="@dimen/dp_10"
                  android:layout_below="@id/info_heart"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_18"
                  android:layout_marginTop="@dimen/dp_5"
                  />

              <ImageView
                  android:layout_width="@dimen/dp_11"
                  android:layout_height="@dimen/dp_12"
                  android:id="@+id/info_locationiv"
                  android:src="@mipmap/location"
                  android:layout_toRightOf="@id/info_head"
                  android:layout_below="@id/info_name"
                  android:layout_marginTop="@dimen/dp_90"
                  android:layout_marginLeft="@dimen/dp_10"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/info_location"
                  android:layout_toRightOf="@id/info_locationiv"
                  android:layout_marginTop="@dimen/dp_126"
                  android:text="东京"
                  />
              <ImageView
                  android:layout_width="@dimen/dp_11"
                  android:layout_height="@dimen/dp_12"
                  android:src="@mipmap/location"
                  android:layout_toRightOf="@id/info_head"
                  android:layout_below="@id/info_locationiv"
                  android:layout_marginTop="@dimen/dp_8"
                  android:layout_marginLeft="@dimen/dp_10"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/info_author"
                  android:textSize="@dimen/sp_12"
                  android:text="wsdefghjefrgt"
                  android:textColor="@color/c_999999"
                  android:layout_below="@id/info_location"
                  android:layout_toRightOf="@id/info_locationiv"
                  android:layout_marginRight="@dimen/dp_2"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_100"
                  android:textSize="@dimen/sp_14"
                  android:textColor="@color/c_999999"
                  android:layout_below="@id/info_head"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:layout_marginTop="@dimen/dp_15"
                  android:id="@+id/info_info"
                  android:text="asadfdgfgfdgrgrgtrgrgefhieruhgoerhgorjnkjdvnfkjnvfuvnoifvfbribnfdnjfdnvoivrnborbnohrobihnroibnoierinb"
                 android:layout_marginBottom="@dimen/dp_15"
                  />
          </RelativeLayout>


    </android.support.v7.widget.CardView>


        <android.support.design.widget.TabLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:id="@+id/info_tab"
            android:layout_below="@id/card"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            ></android.support.design.widget.TabLayout>

        <com.everywhere.trip.widget.NoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_vp"
            android:layout_below="@id/info_tab"
            ></com.everywhere.trip.widget.NoScrollViewPager>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>