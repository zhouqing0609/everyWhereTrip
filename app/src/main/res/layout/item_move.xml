<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:src="@mipmap/sign_in_bg"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/cir"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_47"
    android:layout_marginLeft="@dimen/dp_35"
    android:text="刚刚"
    android:textSize="@dimen/sp_12"
    android:id="@+id/move_data"
    android:textColor="@color/c_999999"

    />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_69"
        android:layout_marginLeft="@dimen/dp_35"
        android:text="上传了一条动态"
        android:textSize="@dimen/sp_14"
         android:textColor="@color/c_333333"
        />


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_307"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_99"
        android:background="@color/c_fefefe"
        android:id="@+id/cv"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/c_373737"
                android:id="@+id/move_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@id/move_title"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_636363"
                android:id="@+id/move_art"
                android:text="asdfghjkghnsdefweeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeh"
                android:maxLines="3"
                android:ellipsize="end"
                />

            <com.youth.banner.Banner
                android:id="@+id/move_img"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_131"
                android:layout_below="@id/move_art"
                android:layout_marginTop="11dp"
                android:src="@mipmap/ic_launcher_round" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_eaeaea"
                android:layout_below="@id/move_img"
                android:layout_marginTop="@dimen/dp_10"
                />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_24"
                android:layout_below="@id/move_img"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/follow_unselected"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/cv"
        android:background="@color/transparent"
        />
    <ImageView
        android:layout_width="@dimen/dp_2"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_below="@id/cir"
        android:background="@mipmap/cursor"
        android:layout_alignBottom="@id/iv"

        />

</RelativeLayout>
