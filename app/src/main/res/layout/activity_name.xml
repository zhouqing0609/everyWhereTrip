<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.activity.NameActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:id="@+id/name_toonar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_0"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/name_back"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_333333"
                android:layout_centerInParent="true"
                android:text="修改信息"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/orgin"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_10"
                />

        </RelativeLayout>
        
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_130"
        android:background="@drawable/edittext"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/name_toonar"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/name_etname"
            android:layout_width="@dimen/dp_335"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:maxLength="27"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_14"

            />
         </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/"
            android:textColor="@color/c_999999"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_180"
            android:layout_marginRight="@dimen/dp_50"
            />
        <TextView
            android:id="@+id/name_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/c_999999"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_180"
            android:layout_marginRight="@dimen/dp_35"
            />

</RelativeLayout>