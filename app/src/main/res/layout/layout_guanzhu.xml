<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:id="@+id/guanzhu_head"
            android:src="@mipmap/head"
            />

        <TextView
            android:id="@+id/guanzhu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_toRightOf="@id/guanzhu_head"
            android:text="杨晨"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_22" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_999999"
            android:layout_toRightOf="@id/guanzhu_head"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/guanzhu_name"
            android:text="248人关注"
            android:id="@+id/guanzhu_guanzhu"
            android:layout_marginTop="@dimen/dp_5"
            />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/sp_12"
            android:id="@+id/guanzhu_iv"
            android:src="@mipmap/location"
            android:layout_toRightOf="@id/guanzhu_head"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/guanzhu_guanzhu"
            android:layout_marginTop="@dimen/dp_12"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/guanzhu_iv"
            android:layout_below="@id/guanzhu_guanzhu"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="中国"
            android:textSize="@dimen/sp_12"
            android:id="@+id/guanzhu_location"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/c_999999"
            />
        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_6"
            android:layout_toRightOf="@id/guanzhu_head"
            android:layout_below="@id/guanzhu_iv"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/location"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/guanzhu_iv2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="asdfgthyjuki"
            android:layout_below="@id/guanzhu_iv"
            android:layout_toRightOf="@id/guanzhu_iv2"
            android:layout_marginTop="5dp"
            android:textColor="@color/c_999999"
            android:id="@+id/guanzhu_info"

            />

    </RelativeLayout>



</android.support.v7.widget.CardView>
