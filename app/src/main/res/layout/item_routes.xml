<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_450"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_5">
        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_450">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_450"
                android:id="@+id/bg_img"/>

            <RelativeLayout
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_116"
                android:background="@color/c_99ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_27"
                    android:id="@+id/title"
                    android:maxLength="6"
                    android:ellipsize="end"
                    android:text="银座"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/c_373737"/>

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/location"
                    android:id="@+id/img_location"
                    android:layout_below="@id/title"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东京"
                    android:id="@+id/city"
                    android:textColor="@color/c_999"
                    android:textSize="@dimen/sp_14"
                    android:layout_toRightOf="@id/img_location"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"/>

                <Button
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_29"
                    android:background="@mipmap/button_pay_particulars"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_34"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:text="￥28.00"
                    android:id="@+id/btn_pay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/dp_18"
                    android:text="疯狂购物买买买"
                    android:id="@+id/intro"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_below="@id/img_location"
                    android:layout_marginTop="@dimen/dp_8"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_636363"
                    android:layout_below="@id/btn_pay"
                    android:id="@+id/purchasedTimes"
                    android:text="530人购买"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
